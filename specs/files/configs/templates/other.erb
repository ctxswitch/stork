###############################################################################
### Kickstart generated by midwife the other one
###############################################################################
install
reboot
text
zerombr yes
clearpart --all --initlabel 
<% partitions.each do |part| %>
<%= part.emit %>
<% end %>
<% interfaces.each do |iface| %>
<%= iface.emit %>
<% end %>
firewall --disabled
lang en_US
langsupport --default=en_US
timezone America/Los_Angeles
selinux --disabled
%packages 
@core
curl
openssh-clients
openssh-server
finger
pciutils
yum
at
acpid
vixie-cron
cronie-noanacron
crontabs
logrotate
ntp
ntpdate
tmpwatch
rsync
mailx
which
wget
man
%post --log=/root/midwife-post.log
chvt 3
echo "Executing post installation"
echo "Contacting midwife to notify of a successful install"
/usr/bin/curl http://<%= Midwife.configuration.server %>:9293/notify/<%= hostname %>/installed