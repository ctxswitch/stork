#!/usr/bin/env ruby

begin
  require 'rubygems'
rescue LoadError
end

begin
  require 'stork'
rescue LoadError
  $LOAD_PATH << File.dirname(__FILE__) + "/../lib"
  require 'stork'
end

require 'optparse'
require 'ostruct'

class StorkCtlApp
  def initialize
    @options = OpenStruct.new
    @options.config = ENV['STORK_CONFIG'] || "/etc/stork/config.rb"
    @options.daemonize = false
    @options.command = :start
  end

  def parse
    opts = OptionParser.new do |o|
      o.banner = "Usage: storkctl start|stop|restart [options]"
      o.on("-c", "--config FILE", "Read configuration from the specified file.") do |config|
        @options.config = config
      end
      o.on("-d", "--daemonize", "Daemonize stork.") do
        @options.daemonize = true
      end
    end

    action = :"#{ARGV.shift}"
    unless [:start, :stop, :restart].include?(action)
      puts opts.help
      exit 1
    end
    @options.command = action
    opts.parse!
  end

  def build
    @configuration = Stork::Configuration.from_file(@options.config)
  end

  def run
    case @options.command
    when :start
      Stork::Server::Control.new(@configuration, @options).start
    when :stop
      Stork::Server::Control.new(@configuration, @options).stop
    when :restart
      Stork::Server::Control.new(@configuration, @options).restart
    end
  end
end

app = StorkCtlApp.new
app.parse
app.build
app.run